<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.hz.junxinbaoan.work.view.CulActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="内容"
                android:textColor="@color/text_color1"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/summary"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:gravity="center_vertical"
                android:hint="最多不超过60个字"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingBottom="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="录音"
                android:textColor="@color/text_color1"
                android:textSize="17sp" />
            <RelativeLayout
                android:id="@+id/lv_player"
                android:layout_width="80dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_white"
                android:scaleType="center"
                android:elevation="2dp"
                android:layout_marginLeft="15dp"
                android:layout_height="25dp" >
                <ImageView
                    android:id="@+id/voice_img"
                    android:layout_width="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/voice_animation"
                    android:layout_height="15dp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/iv_recode"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:textColor="#888888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="图片"
                android:textColor="@color/text_color1"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/no_pic"
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:text="无图片"
                android:textColor="#888888"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/ll_picc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pic1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_pic2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_pic3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="地址"
                android:textColor="@color/text_color1"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:src="@mipmap/icon_cur_loction1" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:text=""
                        android:textColor="@color/text_color1"
                        android:textSize="14sp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:elevation="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="@dimen/normal_10dp"
                    android:background="@color/gray"
                    android:layout_height="163dp">
                    <com.amap.api.maps2d.MapView
                        android:id="@+id/mapview"
                        android:layout_width="match_parent"
                        android:layout_height="164dp"
                        android:elevation="2dp" />
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>