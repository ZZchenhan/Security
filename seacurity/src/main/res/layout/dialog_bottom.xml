<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/btn_dialog_date_cancel"
            android:background="#ffffffff"
            android:text="取消"
            android:layout_marginLeft="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:textColor="#444444"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/btn_dialog_date_decide"
            android:background="#ffffffff"
            android:text="确定"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="#2196F3"
            android:layout_marginRight="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <com.hz.junxinbaoan.weight.dialog.TextPicker
        android:id="@+id/monthPicker_layout_date"
        app:halfVisibleItemCount="2"
        app:wheelCurtain="false"
        app:selectedTextSize="24sp"
        app:itemTextColor="#B8B8B8"
        app:itemTextSize="19sp"
        app:selectedTextColor="@color/black"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:wheelCurtainBorder="false"
        android:layout_height="wrap_content" />
</LinearLayout>