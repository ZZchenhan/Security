<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="xxk.wuhai.seacurity.work.view.CulActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="内容"
                android:textColor="@color/text_color1"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="最多不超过60个字"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="录音"
                android:textColor="@color/text_color1"
                android:textSize="17sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp">

                <xxk.wuhai.seacurity.weight.record.RecordButton
                    android:id="@+id/record_voice"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_camore"
                    android:scaleType="center"
                    android:src="@mipmap/ic_mic"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/lv_player"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_white"
                    android:elevation="2dp"
                    android:scaleType="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/voice_img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/voice_animation" />
                </RelativeLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/iv_recode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#888888"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/del"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:text="删除"
                android:textColor="@color/red"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="图片"
                android:textColor="@color/text_color1"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_camero"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:background="@drawable/bg_camore"
                    android:scaleType="center"
                    android:src="@mipmap/icon_camero" />

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp">

                    <ImageView
                        android:id="@+id/iv_pic1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/iv_de1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right"
                        android:scaleType="center"
                        android:src="@mipmap/ic_pic_delete"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp">

                    <ImageView
                        android:id="@+id/iv_pic2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/iv_de2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right"
                        android:scaleType="center"
                        android:src="@mipmap/ic_pic_delete"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp">

                    <ImageView
                        android:id="@+id/iv_pic3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/iv_de3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right"
                        android:scaleType="center"
                        android:src="@mipmap/ic_pic_delete"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="地址"
                android:textColor="@color/text_color1"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:src="@mipmap/icon_cur_loction1" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:text=""
                        android:textColor="@color/text_color1"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp">

            <FrameLayout
                android:layout_width="294dp"
                android:layout_height="165dp"
                android:layout_centerInParent="true"
                android:layout_weight="0"
                android:background="@color/gray"
                android:elevation="5dp">

                <com.amap.api.maps2d.MapView
                    android:id="@+id/mapview"
                    android:layout_width="294dp"
                    android:layout_height="165dp" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:background="@drawable/bg_colorp_r_4"
                android:elevation="2dp"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
</layout>