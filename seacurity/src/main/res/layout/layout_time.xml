<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#f7f7f7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.hz.junxinbaoan.weight.date.YearPicker
        android:id="@+id/yearPicker_layout_date"
        app:wheelCyclic="true"
        app:indicatorTextSize="20sp"
        app:halfVisibleItemCount="2"
        android:layout_weight="1"
        app:selectedTextColor="#3F3F3F"
        app:selectedTextSize="20sp"
        app:wheelCurtain="false"
        app:wheelCurtainBorder="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <com.hz.junxinbaoan.weight.date.MonthPicker
        android:id="@+id/monthPicker_layout_date"
        app:wheelCyclic="true"
        app:indicatorTextSize="20sp"
        app:halfVisibleItemCount="2"
        android:layout_weight="1"
        app:selectedTextColor="#3F3F3F"
        app:selectedTextSize="20sp"
        app:wheelCurtain="false"
        app:wheelCurtainBorder="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <com.hz.junxinbaoan.weight.date.DayPicker
        android:id="@+id/dayPicker_layout_date"
        app:wheelCyclic="true"
        app:indicatorTextSize="20sp"
        app:halfVisibleItemCount="2"
        android:layout_weight="1"
        app:selectedTextColor="#3F3F3F"
        app:selectedTextSize="20sp"
        app:wheelCurtain="false"
        app:wheelCurtainBorder="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <com.hz.junxinbaoan.weight.date.HourPiker
        android:id="@+id/hourPicker_layout_time"
        app:halfVisibleItemCount="2"
        app:wheelCyclic="true"
        app:indicatorTextSize="20sp"
        android:layout_weight="1"
        app:selectedTextColor="#3F3F3F"
        app:selectedTextSize="20sp"
        app:wheelCurtain="false"
        app:wheelCurtainBorder="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <com.hz.junxinbaoan.weight.date.MinutePiker
        android:id="@+id/minutePicker_layout_time"
        app:wheelCyclic="true"
        app:indicatorTextSize="20sp"
        app:halfVisibleItemCount="2"
        android:layout_weight="1"
        app:selectedTextColor="#3F3F3F"
        app:selectedTextSize="20sp"
        app:wheelCurtain="false"
        app:wheelCurtainBorder="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</LinearLayout>