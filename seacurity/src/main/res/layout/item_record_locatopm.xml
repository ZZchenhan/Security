<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="7dp"
    android:elevation="2dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:background="@drawable/bg_item_white"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/record_type"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color1"
            android:textSize="16sp"
            android:text=""
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cls_name"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color1"
            android:textSize="16sp"
            android:text="班次:"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:text=""
            android:layout_marginLeft="14dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <xxk.wuhai.seacurity.weight.MapContainer
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="170dp">
        <com.amap.api.maps2d.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="170dp"/>
    </xxk.wuhai.seacurity.weight.MapContainer>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="13dp"
            android:layout_marginRight="4dp"
            android:src="@mipmap/icon_times"
            android:layout_height="18dp" />
        <TextView
            android:layout_width="77dp"
            android:text="要求时间："
            android:textColor="@color/text_color1"
            android:textSize="14sp"
            android:drawablePadding="4dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:text="无"
            android:textColor="@color/text_color1"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:paddingRight="16dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="13dp"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/ic_sign_locaion"
                    android:layout_height="18dp" />
                <TextView
                    android:layout_width="77dp"
                    android:text="要求位置："
                    android:textColor="@color/text_color1"
                    android:textSize="14sp"
                    android:drawablePadding="4dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/range"
                android:layout_width="wrap_content"
                android:text="0米"
                android:textColor="#999999"
                android:textSize="12sp"
                android:maxWidth="77dp"
                android:layout_marginLeft="17dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@color/text_color1"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_can_apply"
        android:visibility="visible"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        android:layout_height="wrap_content">
        <xxk.wuhai.seacurity.weight.record.CountTimeText
            android:id="@+id/btn_record"
            android:layout_width="120dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="4小时36分20秒"
            android:layout_marginLeft="-3dp"
            android:textSize="14sp"
            android:layout_height="44dp" />
        <TextView
            android:id="@+id/tv_apply"
            android:layout_width="wrap_content"
            android:text="提交补卡申请"
            android:layout_marginLeft="29dp"
            android:padding="5dp"
            android:textColor="@color/color2196F3"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_over"
        android:paddingRight="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="13dp"
                android:layout_marginRight="4dp"
                android:src="@mipmap/icon_times"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="77dp"
                android:text="打卡时间："
                android:textColor="@color/text_color1"
                android:textSize="14sp"
                android:drawablePadding="4dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/attention_times"
                android:layout_width="wrap_content"
                android:text=""
                android:textColor="#49B1FA"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="13dp"
                android:layout_marginRight="4dp"
                android:src="@mipmap/ic_sign_locaion"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="77dp"
                android:text="打卡位置："
                android:textColor="@color/text_color1"
                android:textSize="14sp"
                android:drawablePadding="4dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/attention_addreess"
                android:layout_width="wrap_content"
                android:text=""
                android:textColor="#49B1FA"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>